<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="DetailsHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="4" />
    </Style>
    <Style x:Key="DetailsGrid" TargetType="Grid">
        <Setter Property="Margin" Value="20" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="BorderThickness" Value="5" />
        <Setter Property="ColumnSpacing" Value="5" />
        <Setter Property="RowSpacing" Value="5" />
        <Setter Property="BorderBrush" Value="Gray" />
    </Style>
    <Style x:Key="MinDetailsGrid" TargetType="Grid" BasedOn="{StaticResource DetailsGrid}">
        <Setter Property="Margin" Value="10" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="BorderThickness" Value="3" />
    </Style>

</ResourceDictionary>
