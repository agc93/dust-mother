<UserControl
    x:Class="DustMother.App.Controls.SaveChangesBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DustMother.App.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <muxc:RelativePanel  Grid.ColumnSpan="2" Visibility="{x:Bind PendingChanges, Mode=OneWay,Converter={StaticResource BooleanToVisibilityConverter}}" Padding="5">
        <muxc:TextBlock Text="Pending Changes" RelativePanel.LeftOf="SaveChanges" VerticalAlignment="Center" Style="{StaticResource ChangesWarning}" />
        <muxc:Button muxc:RelativePanel.AlignRightWithPanel="True" Content="Save" Style="{StaticResource SaveChangesButton}" Click="SaveChanges_Click" x:Name="SaveChanges" />
    </muxc:RelativePanel>
</UserControl>
